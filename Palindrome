word = str(input("Enter the word:"))
def reverse(word):
    return word[::-1]

def palindrome(word):
    reversal = reverse(word)
    
    if (word == reversal):
        return True
    return False

answer = palindrome(word)
if answer == 1:
    print("The given word is a palindrome")
else:
    print("The given word is not a palindrome")
    
